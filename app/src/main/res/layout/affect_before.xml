<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_margin="10dp"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="0dp"
    android:weightSum="1">


    <TextView
        android:id="@+id/captionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AED1FF"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="RightNow - UW Study"
        android:textAlignment="textStart"
        android:gravity="start"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#AED1FF"
        android:padding="20dp"
        android:text="How were you feeling right before launching this app?"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <RadioGroup
            android:id="@+id/valence_group"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:paddingTop="20dp">


            <RadioButton
                android:id="@+id/radio_v1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/black"
                android:gravity="center"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_v2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/black"
                android:gravity="center"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_v3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/black"
                android:gravity="center"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_v4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView_v2"
                android:buttonTint="@android:color/black"
                android:gravity="center"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_v5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/black"
                android:gravity="center"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_v6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/black"
                android:gravity="center"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_v7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/black"
                android:gravity="center"
                android:padding="8dp" />

        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/textView_v2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radio_v4"
            android:background="@android:color/white"
            android:gravity="center"
            android:maxLines="1"
            android:text="Negative                    Your Normal                  Positive"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:visibility="visible" />

    </LinearLayout>


    <View
        android:id="@+id/rectangle_at_the_middle"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:background="#AED1FF"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <RadioGroup
            android:id="@+id/energy_group"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:paddingTop="20dp">


            <RadioButton
                android:id="@+id/radio_e1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/black"
                android:gravity="center"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_e2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/black"
                android:gravity="center"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_e3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/black"
                android:gravity="center"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_e4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView_v2"
                android:buttonTint="@android:color/black"
                android:gravity="center"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_e5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/black"
                android:gravity="center"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_e6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/black"
                android:gravity="center"
                android:padding="8dp" />

            <RadioButton
                android:id="@+id/radio_e7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@android:color/black"
                android:gravity="center"
                android:padding="8dp" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/textView_e2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radio_v4"
            android:gravity="center"
            android:maxLines="1"
            android:text="Low Energy               Your Normal            High Energy"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:id="@+id/rectangle_at_the_bottom"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:background="#AED1FF"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:clickable="true"
        android:gravity="center_vertical|right"
        android:text="Submit"
        android:textAlignment="center" />

</LinearLayout>